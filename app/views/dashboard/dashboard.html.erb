<div class="dashboard-container">
  <%= render 'shared/sidebar' %>
  
  <!-- Main Content -->
  <main class="main-content">
    <div class="page-header">
      <h1 class="page-title">Dashboard</h1>
      <p class="page-subtitle">Welcome to your dashboard, <%= current_user.name || current_user.email.split('@').first %></p>
    </div>

    <!-- Stats Overview -->
    <div class="dashboard-grid mb-4">
      <div class="stat-card">
        <div class="card-body">
          <div class="stat-label">Total Creators</div>
          <div class="stat-value"><%= @dashboard_stats[:total_creators] %></div>
          <div class="stat-trend trend-up">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd" />
            </svg>
            +2 this month
          </div>
        </div>
      </div>
      
      <div class="stat-card">
        <div class="card-body">
          <div class="stat-label">Active Creators</div>
          <div class="stat-value"><%= @dashboard_stats[:active_creators] %></div>
          <div class="stat-trend trend-up">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd" />
            </svg>
            90% activation rate
          </div>
        </div>
      </div>
      
      <div class="stat-card">
        <div class="card-body">
          <div class="stat-label">Total Revenue</div>
          <div class="stat-value"><%= @dashboard_stats[:total_revenue] %></div>
          <div class="stat-trend trend-up">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd" />
            </svg>
            <%= @dashboard_stats[:growth_rate] %> vs last month
          </div>
        </div>
      </div>
      
      <div class="stat-card">
        <div class="card-body">
          <div class="stat-label">AI Chats Generated</div>
          <div class="stat-value">3,254</div>
          <div class="stat-trend trend-up">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd" />
            </svg>
            32.4% this month
          </div>
        </div>
      </div>
    </div>

    <!-- Creators Management -->
    <div class="card mb-4">
      <div class="card-header">
        <h2 class="card-title">Manage Creators</h2>
        <a href="#" class="btn btn-primary">Add New Creator</a>
      </div>
      <div class="card-body p-0">
        <div class="overflow-x-auto">
          <table class="w-full min-w-full">
            <thead>
              <tr class="border-b border-gray-200">
                <th class="py-3 px-4 text-left font-medium text-gray-500">Creator</th>
                <th class="py-3 px-4 text-left font-medium text-gray-500">Status</th>
                <th class="py-3 px-4 text-left font-medium text-gray-500">Subscribers</th>
                <th class="py-3 px-4 text-left font-medium text-gray-500">Growth</th>
                <th class="py-3 px-4 text-left font-medium text-gray-500">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if @organization.creator_profiles.exists? %>
                <% @top_creators.each do |creator| %>
                  <tr class="border-b border-gray-200 hover:bg-gray-50">
                    <td class="py-3 px-4">
                      <div class="flex items-center gap-3">
                        <div class="user-avatar" style="width: 2.5rem; height: 2.5rem;">
                          <%= creator.name[0].upcase rescue 'C' %>
                        </div>
                        <div>
                          <div class="font-medium"><%= creator.name %></div>
                          <div class="text-xs text-gray-500"><%= creator.onlyfans_username %></div>
                        </div>
                      </div>
                    </td>
                    <td class="py-3 px-4">
                      <span class="badge <%= creator.status == 'active' ? 'badge-green' : 'badge-red' %>">
                        <%= creator.status.capitalize %>
                      </span>
                    </td>
                    <td class="py-3 px-4 font-medium">
                      <%= rand(100..2000) %> <!-- Placeholder data -->
                    </td>
                    <td class="py-3 px-4">
                      <div class="flex items-center gap-1 text-green-500">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                          <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd" />
                        </svg>
                        <%= rand(2.1..15.9).round(1) %>%
                      </div>
                    </td>
                    <td class="py-3 px-4">
                      <div class="flex gap-2">
                        <a href="#" class="btn btn-outline py-1 px-3">View</a>
                        <a href="#" class="btn btn-outline py-1 px-3">Edit</a>
                      </div>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="5" class="py-6 text-center text-gray-500">
                    No creators found. Add your first creator to get started.
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Revenue Overview -->
    <div class="card mb-4">
      <div class="card-header">
        <h2 class="card-title">Revenue Overview</h2>
        <a href="#" class="btn btn-outline">View Reports</a>
      </div>
      <div class="card-body p-0">
        <div class="divided-list">
          <div class="list-item p-4">
            <div class="flex-1">
              <h3 class="font-medium">This Month's Revenue</h3>
              <div class="flex items-center gap-2 mt-1">
                <span class="text-2xl font-bold">$8,432</span>
                <span class="badge badge-green">+12.4%</span>
              </div>
            </div>
            <div>
              <div class="text-sm text-gray-500">March 2025</div>
            </div>
          </div>
          
          <div class="list-item p-4">
            <div class="flex-1">
              <h3 class="font-medium">Top Earning Creator</h3>
              <div class="flex items-center gap-3 mt-1">
                <div class="user-avatar" style="width: 2rem; height: 2rem; font-size: 0.875rem;">
                  S
                </div>
                <div>
                  <div>Sarah Johnson</div>
                  <div class="text-sm text-gray-500">$2,354 this month</div>
                </div>
              </div>
            </div>
            <div>
              <span class="badge badge-green">+23.8%</span>
            </div>
          </div>
          
          <div class="list-item p-4">
            <div class="flex-1">
              <h3 class="font-medium">Commission</h3>
              <div class="flex items-center gap-2 mt-1">
                <span class="text-2xl font-bold">$1,265</span>
                <span class="badge badge-green">+8.7%</span>
              </div>
            </div>
            <div>
              <div class="text-sm text-gray-500">15% average rate</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Marketing & Growth -->
    <div class="card">
      <div class="card-header">
        <h2 class="card-title">Marketing & Growth</h2>
        <a href="#" class="btn btn-outline">View All</a>
      </div>
      <div class="card-body">
        <div class="divided-list">
          <div class="list-item">
            <div class="flex-1">
              <h3 class="font-medium">Cross-Promotion Campaign</h3>
              <p class="text-gray-600 text-sm">Promote your creators to each other's audiences to maximize reach</p>
            </div>
            <div>
              <button class="btn btn-primary">Setup</button>
            </div>
          </div>
          
          <div class="list-item">
            <div class="flex-1">
              <h3 class="font-medium">Content Calendar Template</h3>
              <p class="text-gray-600 text-sm">Share a unified content schedule with all your creators</p>
            </div>
            <div>
              <button class="btn btn-outline">Download</button>
            </div>
          </div>
          
          <div class="list-item">
            <div class="flex-1">
              <h3 class="font-medium">AI-Powered Growth Strategy</h3>
              <p class="text-gray-600 text-sm">Get personalized growth recommendations for each creator</p>
            </div>
            <div>
              <button class="btn btn-outline">Generate</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div> 