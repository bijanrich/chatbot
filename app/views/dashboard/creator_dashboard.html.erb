  <!-- Main Content -->
  <main class="main-content">
    <div class="page-header">
      <h1 class="page-title">Creator Dashboard</h1>
      <p class="page-subtitle">
        Welcome back, here's an overview of your creator business
      </p>
    </div>
    
    <!-- Stats Grid -->
    <div class="dashboard-grid">
      <div class="stat-card">
        <div class="stat-title">Subscribers</div>
        <div class="stat-value">1,248</div>
        <div class="stat-trend trend-up">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor" width="16" height="16">
            <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd" />
          </svg>
          8.2% this month
        </div>
      </div>
      
      <div class="stat-card">
        <div class="stat-title">Monthly Revenue</div>
        <div class="stat-value">$8,942</div>
        <div class="stat-trend trend-up">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor" width="16" height="16">
            <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd" />
          </svg>
          12.5% this month
        </div>
      </div>
      
      <div class="stat-card">
        <div class="stat-title">Content Engagement</div>
        <div class="stat-value">87.3%</div>
        <div class="stat-trend trend-up">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor" width="16" height="16">
            <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd" />
          </svg>
          3.7% this month
        </div>
      </div>
      
      <div class="stat-card">
        <div class="stat-title">AI Chats</div>
        <div class="stat-value">342</div>
        <div class="stat-trend trend-up">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor" width="16" height="16">
            <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd" />
          </svg>
          24.8% this month
        </div>
      </div>
    </div>
    
    <!-- AI Chat Assistant Card -->
    <div class="activity-card">
      <div class="activity-header">
        <h2 class="activity-title">AI Chat Assistant</h2>
        <a href="#" class="view-all">Launch Chatbot</a>
      </div>
      
      <div style="padding: 1rem 0; display: flex; flex-direction: column; gap: 1rem;">
        <div style="display: flex; gap: 1rem; align-items: flex-start;">
          <div style="
            width: 2.5rem; 
            height: 2.5rem; 
            background-color: #eff6ff; 
            border-radius: 0.375rem;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #2563eb;
            flex-shrink: 0;
          ">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" width="20" height="20">
              <path d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5z" />
              <path d="M15 7v2a4 4 0 01-4 4H9.828l-1.766 1.767c.28.149.599.233.938.233h2l3 3v-3h2a2 2 0 002-2V9a2 2 0 00-2-2h-1z" />
            </svg>
          </div>
          <div style="flex: 1;">
            <p style="margin-bottom: 0.5rem; font-weight: 500;">Generate personalized responses for your fans</p>
            <p style="color: #64748b; font-size: 0.875rem;">Our AI chatbot helps you engage with your audience by creating custom, on-brand messages that sound just like you.</p>
          </div>
        </div>
        
        <div style="display: flex; gap: 1rem; align-items: flex-start;">
          <div style="
            width: 2.5rem; 
            height: 2.5rem; 
            background-color: #eff6ff; 
            border-radius: 0.375rem;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #2563eb;
            flex-shrink: 0;
          ">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" width="20" height="20">
              <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
            </svg>
          </div>
          <div style="flex: 1;">
            <p style="margin-bottom: 0.5rem; font-weight: 500;">Build stronger connections with fans</p>
            <p style="color: #64748b; font-size: 0.875rem;">Increase fan loyalty and retention by providing timely, personalized responses even when you're busy.</p>
          </div>
        </div>
        
        <div style="display: flex; justify-content: center; margin-top: 0.5rem;">
          <a href="#" class="nav-item active" style="
            display: inline-flex;
            width: auto;
            background-color: #4f46e5;
            color: white;
          ">
            Get Started with AI Chat
          </a>
        </div>
      </div>
    </div>
    
    <!-- Activity Feed -->
    <div class="activity-card">
      <div class="activity-header">
        <h2 class="activity-title">Recent Activity</h2>
        <a href="#" class="view-all">View all</a>
      </div>
      
      <div class="activity-list">
        <div class="activity-item">
          <div class="activity-icon">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" width="20" height="20">
              <path d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5z" />
              <path d="M15 7v2a4 4 0 01-4 4H9.828l-1.766 1.767c.28.149.599.233.938.233h2l3 3v-3h2a2 2 0 002-2V9a2 2 0 00-2-2h-1z" />
            </svg>
          </div>
          <div class="activity-content">
            <div class="activity-message">New message from John: "Love your latest post! Can you share more tips?"</div>
            <div class="activity-time">10 minutes ago</div>
          </div>
        </div>
        
        <div class="activity-item">
          <div class="activity-icon">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" width="20" height="20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="activity-content">
            <div class="activity-message">Sarah subscribed to your premium tier</div>
            <div class="activity-time">1 hour ago</div>
          </div>
        </div>
        
        <div class="activity-item">
          <div class="activity-icon">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" width="20" height="20">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="activity-content">
            <div class="activity-message">Your new content set "Summer Photoshoot" has been published</div>
            <div class="activity-time">3 hours ago</div>
          </div>
        </div>
        
        <div class="activity-item">
          <div class="activity-icon">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" width="20" height="20">
              <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
              <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="activity-content">
            <div class="activity-message">Your post reached 5,000 views</div>
            <div class="activity-time">Yesterday</div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Creator Profile Card -->
    <div class="activity-card">
      <div class="activity-header">
        <h2 class="activity-title">Creator Profile</h2>
        <a href="#" class="view-all">Edit</a>
      </div>
      
      <div class="profile-grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
        <div>
          <p style="margin-bottom: 0.5rem; font-weight: 500;">Name</p>
          <p style="color: #64748b;"><%= @creator_profile.name %></p>
        </div>
        
        <div>
          <p style="margin-bottom: 0.5rem; font-weight: 500;">OnlyFans Username</p>
          <p style="color: #64748b;"><%= @creator_profile.onlyfans_username %></p>
        </div>
        
        <div>
          <p style="margin-bottom: 0.5rem; font-weight: 500;">Status</p>
          <span style="
            background-color: <%= @creator_profile.status == 'active' ? '#DCFCE7' : '#FEE2E2' %>; 
            color: <%= @creator_profile.status == 'active' ? '#166534' : '#991B1B' %>;
            padding: 0.25rem 0.5rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 500;
          ">
            <%= @creator_profile.status.capitalize %>
          </span>
        </div>
        
        <div>
          <p style="margin-bottom: 0.5rem; font-weight: 500;">Organization</p>
          <p style="color: #64748b;"><%= @creator_profile.organization.name %></p>
        </div>
      </div>
    </div>
  </main>
</div> 