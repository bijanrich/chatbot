<div class="dashboard-container">
  <%= render 'shared/sidebar' %>
  
  <!-- Main Content -->
  <main class="main-content">
    <div class="page-header">
      <h1 class="page-title">Creator Dashboard</h1>
      <p class="page-subtitle">Welcome to your creator dashboard, <%= current_user.name || current_user.email.split('@').first %></p>
    </div>
    
    <!-- Stats Overview -->
    <div class="dashboard-grid mb-4">
      <div class="stat-card">
        <div class="card-body">
          <div class="stat-label">Total Followers</div>
          <div class="stat-value">3,254</div>
          <div class="stat-trend trend-up">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd" />
            </svg>
            12.5% this month
          </div>
        </div>
      </div>
      
      <div class="stat-card">
        <div class="card-body">
          <div class="stat-label">Messages</div>
          <div class="stat-value">432</div>
          <div class="stat-trend trend-up">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd" />
            </svg>
            8.3% this month
          </div>
        </div>
      </div>
      
      <div class="stat-card">
        <div class="card-body">
          <div class="stat-label">Revenue</div>
          <div class="stat-value">$4,125</div>
          <div class="stat-trend trend-up">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd" />
            </svg>
            23.1% this month
          </div>
        </div>
      </div>
      
      <div class="stat-card">
        <div class="card-body">
          <div class="stat-label">New Fans</div>
          <div class="stat-value">87</div>
          <div class="stat-trend trend-up">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd" />
            </svg>
            5.2% this month
          </div>
        </div>
      </div>
    </div>
    
    <!-- AI Chat Section -->
    <div class="card mb-4">
      <div class="card-header">
        <h2 class="card-title">AI Chat Assistant</h2>
        <a href="#" class="btn btn-primary">Create New Chat</a>
      </div>
      <div class="card-body p-0">
        <div class="divided-list">
          <div class="list-item p-4">
            <div class="flex-1">
              <div class="flex gap-2 items-center mb-1">
                <span class="badge badge-green">Active</span>
                <h3 class="font-medium">Welcome Message</h3>
              </div>
              <p class="text-gray-600 text-sm">Personalized welcome message for new subscribers</p>
            </div>
            <div>
              <span class="text-sm text-gray-500">Responses: 124</span>
            </div>
          </div>
          
          <div class="list-item p-4">
            <div class="flex-1">
              <div class="flex gap-2 items-center mb-1">
                <span class="badge badge-green">Active</span>
                <h3 class="font-medium">Follow-up Chat</h3>
              </div>
              <p class="text-gray-600 text-sm">Engaging with fans who haven't been active recently</p>
            </div>
            <div>
              <span class="text-sm text-gray-500">Responses: 68</span>
            </div>
          </div>
          
          <div class="list-item p-4">
            <div class="flex-1">
              <div class="flex gap-2 items-center mb-1">
                <span class="badge badge-yellow">Draft</span>
                <h3 class="font-medium">Subscription Renewal</h3>
              </div>
              <p class="text-gray-600 text-sm">Reminder for fans with expiring subscriptions</p>
            </div>
            <div>
              <span class="text-sm text-gray-500">Not active</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Upcoming Content -->
    <div class="card mb-4">
      <div class="card-header">
        <h2 class="card-title">Upcoming Content</h2>
        <a href="#" class="btn btn-outline">Schedule New</a>
      </div>
      <div class="card-body p-0">
        <div class="divided-list">
          <div class="list-item p-4">
            <div class="flex-1">
              <h3 class="font-medium">Beach Photoshoot</h3>
              <p class="text-gray-600 text-sm">Scheduled for tomorrow at 2:00 PM</p>
            </div>
            <div>
              <span class="badge badge-gray">Photo</span>
            </div>
          </div>
          
          <div class="list-item p-4">
            <div class="flex-1">
              <h3 class="font-medium">Q&A Session</h3>
              <p class="text-gray-600 text-sm">Scheduled for Friday at 7:00 PM</p>
            </div>
            <div>
              <span class="badge badge-gray">Live</span>
            </div>
          </div>
          
          <div class="list-item p-4">
            <div class="flex-1">
              <h3 class="font-medium">Workout Routine</h3>
              <p class="text-gray-600 text-sm">Scheduled for next Monday at 10:00 AM</p>
            </div>
            <div>
              <span class="badge badge-gray">Video</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- AI Content Ideas -->
    <div class="card">
      <div class="card-header">
        <h2 class="card-title">AI Content Ideas</h2>
        <a href="#" class="btn btn-outline">Generate More</a>
      </div>
      <div class="card-body">
        <div class="divided-list">
          <div class="list-item">
            <div class="flex-1">
              <h3 class="font-medium">"Day in My Life" Vlog Series</h3>
              <p class="text-gray-600 text-sm">Show your daily routine to connect with fans on a more personal level</p>
            </div>
            <div>
              <button class="btn btn-outline">Use</button>
            </div>
          </div>
          
          <div class="list-item">
            <div class="flex-1">
              <h3 class="font-medium">Fan Appreciation Content</h3>
              <p class="text-gray-600 text-sm">Create special content to thank your most engaged subscribers</p>
            </div>
            <div>
              <button class="btn btn-outline">Use</button>
            </div>
          </div>
          
          <div class="list-item">
            <div class="flex-1">
              <h3 class="font-medium">Behind-the-Scenes Look at Your Creative Process</h3>
              <p class="text-gray-600 text-sm">Share how you plan and create your content</p>
            </div>
            <div>
              <button class="btn btn-outline">Use</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div> 