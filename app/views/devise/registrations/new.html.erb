<div class="auth-container">
  <div class="auth-card">
    <h1 class="logo-text">FanPilot</h1>
    
    <h2 class="auth-title">Create a new account</h2>
    <p class="auth-subtitle">It takes less than two minutes to sign up</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, autofocus: true, class: "form-input", placeholder: "John Doe" %>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autocomplete: "email", class: "form-input", placeholder: "johnDoe@email.com" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-input", placeholder: "‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" %>
      </div>

      <div class="form-group">
        <%= f.label :user_type, "I want to join as:", class: "form-label" %>
        <div class="role-options">
          <%= radio_button_tag :user_type, "creator", false, class: "role-radio", id: "type-creator" %>
          <%= label_tag :user_type_creator, class: "role-label", for: "type-creator" do %>
            <div class="role-icon">üë©‚Äçüé®</div>
            <div class="role-text">
              <strong>Creator</strong>
              <span>I create content and want to grow my business</span>
            </div>
          <% end %>

          <%= radio_button_tag :user_type, "agency", false, class: "role-radio", id: "type-agency" %>
          <%= label_tag :user_type_agency, class: "role-label", for: "type-agency" do %>
            <div class="role-icon">üè¢</div>
            <div class="role-text">
              <strong>Agency</strong>
              <span>I manage multiple creators</span>
            </div>
          <% end %>
        </div>
      </div>

      <%= f.submit "Sign up", class: "auth-button" %>

      <div class="auth-links">
        Already have an account? <%= link_to "Login", new_user_session_path %>
      </div>
    <% end %>
  </div>
</div>

<style>
.role-options {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  margin-top: 0.5rem;
}

.role-radio {
  display: none;
}

.role-label {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem;
  border: 1px solid #e5e7eb;
  border-radius: 0.5rem;
  cursor: pointer;
  transition: all 0.2s ease;
}

.role-radio:checked + .role-label {
  border-color: #4f46e5;
  background-color: #f5f3ff;
}

.role-icon {
  font-size: 1.5rem;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f3f4f6;
  border-radius: 50%;
}

.role-text {
  display: flex;
  flex-direction: column;
}

.role-text strong {
  font-weight: 600;
}

.role-text span {
  font-size: 0.875rem;
  color: #6b7280;
}
</style>
