<div class="auth-container">
  <div class="auth-form-container">
    <div class="auth-header">
      <h1>Sign up</h1>
      <p>Create your account to get started</p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <% if resource.errors.any? %>
        <div class="alert alert-danger mb-4">
          <h4 class="alert-heading">
            <%= pluralize(resource.errors.count, "error") %> prevented you from signing up:
          </h4>
          <ul class="mb-0">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Your full name", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control", placeholder: "Your email address", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Create a password (8+ characters)", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm password", class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password", required: true %>
      </div>

      <%= f.submit "Sign up", class: "auth-button" %>

      <div class="auth-links">
        Already have an account? <%= link_to "Login", new_user_session_path %>
      </div>
    <% end %>
  </div>
</div>

<style>
.role-options {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  margin-top: 0.5rem;
}

.role-radio {
  display: none;
}

.role-label {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem;
  border: 1px solid #e5e7eb;
  border-radius: 0.5rem;
  cursor: pointer;
  transition: all 0.2s ease;
}

.role-radio:checked + .role-label {
  border-color: #4f46e5;
  background-color: #f5f3ff;
}

.role-icon {
  font-size: 1.5rem;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f3f4f6;
  border-radius: 50%;
}

.role-text {
  display: flex;
  flex-direction: column;
}

.role-text strong {
  font-weight: 600;
}

.role-text span {
  font-size: 0.875rem;
  color: #6b7280;
}
</style>
