<div class="auth-container">
  <div class="auth-card">
    <h1 class="logo-text">FanPilot</h1>
    
    <h2 class="auth-title">Welcome back</h2>
    <p class="auth-subtitle">Sign in to your account</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input", placeholder: "johnDoe@email.com" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-input", placeholder: "••••••••" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-checkbox-group">
          <%= f.check_box :remember_me, class: "form-checkbox" %>
          <%= f.label :remember_me, class: "form-label" %>
        </div>
      <% end %>

      <%= f.submit "Sign in", class: "auth-button" %>

      <div class="auth-links">
        Don't have an account? <%= link_to "Sign up", new_user_registration_path %>
        <br>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %>
      </div>
    <% end %>
  </div>
</div>
